	def on_update(self):
		time.sleep(0.2)
		print()
		command = input("> ")
				
		
		if command == "forward":
			print()
			self.player.x += 1
			playerY = self.player.y
			playerX = self.player.x
			self.knownTerrain()
			print()
			print("Player is: ", self.player.x, self.player.y)
			self.currentFood -= 5
			self.currentThirst -= 5
			print("hunger: " + str(self.currentFood) + " thirst: " + str(self.currentThirst))
		elif command == "back":
			print()
			self.player.x-= 1
			playerY = self.player.y
			playerX = self.player.x
			self.knownTerrain()
			print()
			print("Player is: ", self.player.x, self.player.y)
			self.currentFood -= 5
			self.currentThirst -= 5
			print("hunger: " + str(self.currentFood) + " thirst: " + str(self.currentThirst))
		elif command == "left":
			print()
			self.player.y+= 1
			playerY = self.player.y
			playerX = self.player.x
			self.knownTerrain()
			print()
			print("Player is: ", self.player.x, self.player.y)
			self.currentFood -= 5
			self.currentThirst -= 5
			print("hunger: " + str(self.currentFood) + " thirst: " + str(self.currentThirst))
		elif command == "right":
			print()
			self.player.y-= 1
			playerY = self.player.y
			playerX = self.player.x
			self.knownTerrain()
			print()
			print("Player is: ", self.player.x, self.player.y)
			self.currentFood -= 5
			self.currentThirst -= 5
			print("hunger: " + str(self.currentFood) + " thirst: " + str(self.currentThirst))
		elif command == "help":
			print()
			print("forward")
			print("back")
			print("left")
			print("right")
			print("save")
			print("delete")
			print("collect")
			print("inventory")
			print("dump")
			print("craft")
			print("clear")
			print("help")
			print("consume")
		elif command == "save":
			self.save()
		elif command == "delete":
			self.delete()
		elif command == "inventory":
			Print = ""
			for object in self.load.inventory:
				Print = Print + " " + object
			if self.load.inventory == []:
				print()
				print("empty")
			else:
				print()
				print("inventory:" + Print)
		elif command == "dump":
			Print = ""
			v = ""
			for object in self.load.inventory:
				Print = Print + " " + object
			if self.load.inventory == []:
				print()
				print("no items to dump")
			else:
				print()
				print("inventory: " + Print)
				print()
				print("choose item to dump")
				dump = input("dump: ")

				for object in self.load.inventory:
					if dump == object:
						self.load.inventory.remove(object)
						v = "true"
						print()
						print("dumped " + object)
						break
					else:
						v = "false"
				if v == "false":
					print()
					print("item is not in inventory")
		
		elif command == "collect":
			collect = input("collect: ")
			if collect == "wood":
				if self.treeOption == "true":
					x = 0
					for object in self.load.inventory:
						x += 1
					if x >= self.invMax:
						print()
						print("inventory is full")
					else:
						self.load.inventory.append("wood")
						self.currentFood -= 5
						self.currentThirst -= 5
						print()
						print("collected wood")
				else:
					print()
					print("no wood to collect")
			elif collect == "food":
				if self.foodOption == "true":
					x = 0
					for object in self.load.inventory:
						x += 1
					if x >= self.invMax:
						print()
						print("inventory is full")
					else:
						self.load.inventory.append("food")
						self.currentFood -= 5
						self.currentThirst -= 5
						print()
						print("collected food")
				elif self.foodOption == "false2":
					print()
					print("you need a knife to collect food")
				else:
					print()
					print("no food to collect")
			elif collect == "water":
				if self.waterOption == "true":
					x = 0
					for object in self.load.inventory:
						x += 1
					if x >= self.invMax:
						print()
						print("inventory is full")
					else:
						self.load.inventory.append("water")
						self.currentFood -= 5
						self.currentThirst -= 5
						print()
						print("collected water")
				elif self.waterOption == "false2":
					print()
					print("you need a bucket to collect water")
				else:
					print()
					print("no water to collect")
			elif collect == "stone":
				if self.rockOption == "true":
					x = 0
					for object in self.load.inventory:
						x += 1
					if x >= self.invMax:
						print()
						print("inventory is full")
					else:
						self.load.inventory.append("stone")
						self.currentFood -= 5
						self.currentThirst -= 5
						print()
						print("collected stone")
				elif self.rockOption == "false2":
					print()
					print("you need a pickaxe to collect stone")
				else:
					print("no stone to collect")
			else:
				print()
				print("invalid collect option")	
		elif command == "clear":
			os.system("cls")
			print()
			self.printLocation()
			print()
			print("player is: " + str(self.player.x) + " " + str(self.player.y))
		elif command == "menu":
			print("head back to menu? any unsaved progress will be lost")
			while True:
				self.answer = input("(y/n)> ")
				if self.answer == "y":
					self.menuReturn = "true"
					break
				elif self.answer == "n":
					print()
					self.menuReturn = "false"
					break
				else:
					print("please enter y or n")
					
		elif command == "consume":
			consume = input("consume item: ")
			if consume == "food":
				if self.currentFood > 95:
					print("food level is full")
				else:
					try:
						self.load.inventory.remove("food")
						self.currentFood += 50
					except:
						print("no food to consume")
			elif consume == "water":
				if self.currentThirst > 95:
					print("thirst level is full")
				else:
					try:
						self.load.inventory.remove("water")
						self.currentThirst += 50
					except:
						print("no food to consume")
			
		elif command == "craft":
			craft = input("craft: ")
			if craft == "pickaxe":
				self.craft("pickaxe", "wood", "wood", 1)
			elif craft == "bucket":
				self.craft("bucket", "stone", "stone", 2)
			elif craft == "knife":
				self.craft("knife", "wood", "stone", 2)
			else:
				print("that is not a craftable item")		
		else:
			print("invalid input")

def main():
	time.sleep(1)
	os.system("cls")
	world.startup()
	world.setup()
	while True:
		#world.on_draw()
		world.itemCheck()
		world.on_update()
		if world.menuReturn == "true":
			objects = []
			inventory = []
			break
	objects = []
	main()

world = World()
main()
